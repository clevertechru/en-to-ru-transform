extends:
  - eslint:recommended
parserOptions:
  ecmaVersion: 8
env:
  es6: true
  node: true
rules:
  semi: off
  strict: off
  indent:
    - error
    - 2
    - SwitchCase: 1
  quotes:
    - 1
    - single
    - avoid-escape
  space-before-function-paren:
    - 2
    - always
  keyword-spacing:
    - 2
    - before: true
      after: true
  space-infix-ops: 2
  spaced-comment:
    - 2
    - always
  arrow-spacing: 2
  no-console: off
  no-empty: 2
  eqeqeq:
    - 2
    - always
  no-unused-vars: 2
  no-unsafe-negation: 2
  prefer-const: 1
  no-var: 1
  no-constant-condition: 1
  prefer-arrow-callback: 2
  dot-location: [2, "property"]
  object-curly-spacing: ["error", "always"]
